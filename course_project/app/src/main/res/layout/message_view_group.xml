<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="321dp"
    android:layout_height="wrap_content"
    tools:parentTag="com.volboy.course_project.customviews.MessageViewGroup">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:scaleType="centerCrop"
        android:src="@drawable/darell_steward"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/headerMarginLeft"
        android:layout_marginTop="@dimen/headerMarginTop"
        android:layout_marginBottom="@dimen/headerMarginBottom"
        android:text="@string/header_str"
        android:textColor="@color/header_color"
        android:textSize="@dimen/header_text_size" />

    <TextView
        android:id="@+id/message"
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/messageMarginRight"
        android:layout_marginBottom="@dimen/messageMarginBottom"
        android:text="@string/message_str"
        android:textColor="@color/message_color"
        android:textSize="@dimen/message_text_size" />
</merge>