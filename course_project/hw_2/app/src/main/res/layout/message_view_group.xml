<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.volboy.hw_2.customviews.MessageViewGroup">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_margin="8dp"
        android:background="@color/black"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Имя Фамилия "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Любуюсь ночной серебристой рекой идет енот со стиральной доской"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/flex_box_layout"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.volboy.hw_2.customviews.EmojiView
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:fontFamily="cursive"
            android:onClick="clickEmojiiView"
            android:paddingLeft="9dp"
            android:paddingTop="4.8dp"
            android:paddingRight="9dp"
            android:paddingBottom="4.8dp"
            app:ev_emoji="0x1F606"
            app:ev_text="1"
            app:ev_text_size="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


</merge>