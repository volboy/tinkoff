<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="321dp"
    android:layout_height="wrap_content"
    tools:parentTag="com.volboy.hw_2.customviews.MessageViewGroup">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:scaleType="centerCrop"
        android:src="@drawable/darell_steward"
        app:shapeAppearanceOverlay="@style/circle" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/headerMarginLeft"
        android:layout_marginTop="@dimen/headerMarginTop"
        android:layout_marginBottom="@dimen/headerMarginBottom"
        android:text="@string/header_str"
        android:textColor="@color/header_color"
        android:textSize="@dimen/header_text_size" />

    <TextView
        android:id="@+id/message"
        android:layout_width="@dimen/message_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/messageMarginRight"
        android:layout_marginBottom="@dimen/messageMarginBottom"
        android:text="@string/message_str"
        android:textColor="@color/message_color"
        android:textSize="@dimen/message_text_size" />

    <com.volboy.hw_2.customviews.FlexBoxLayout
        android:id="@+id/flex_box_layout"
        android:layout_width="@dimen/flexbox_width"
        android:layout_height="wrap_content">

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f601"
            app:ev_text="1"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f602"
            app:ev_text="2"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f60d"
            app:ev_text="3"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f60e"
            app:ev_text="4"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f61c"
            app:ev_text="5"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f624"
            app:ev_text="10"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f631"
            app:ev_text="100"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f64f"
            app:ev_text="1000"
            app:ev_text_size="14sp" />

        <com.volboy.hw_2.customviews.EmojiView
            style="@style/EmojiViewStyle"
            android:onClick="clickEmojiiView"
            app:ev_emoji="0x1f608"
            app:ev_text=""
            app:ev_text_size="14sp" />
    </com.volboy.hw_2.customviews.FlexBoxLayout>

</merge>